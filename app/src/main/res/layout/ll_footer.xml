<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/bSummary"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/silver"
        android:src="@drawable/bdark_ic_action_list" />

    <ImageView
        android:id="@+id/bChart"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/transparent_silver"
        android:src="@drawable/bdark_bdark_ic_action_line_chart" />

    <ImageView
        android:id="@+id/bCalculator"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/transparent_silver"
        android:src="@drawable/bdark_ic_action_calculator" />

    <ImageView
        android:id="@+id/bAlerts"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/transparent_silver"
        android:src="@drawable/bdark_ic_action_bell"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/bStats"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/transparent_silver"
        android:src="@drawable/bdark_bdark_ic_action_achievement"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/bAbout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/transparent_silver"
        android:src="@drawable/bdark_ic_action_info" />
</LinearLayout>