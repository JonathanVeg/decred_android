<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="altcoin.br.decred">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="altcoin.br.decred.application.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/dcr_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="altcoin.br.decred.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="altcoin.br.decred.CalculatorActivity"
            android:label="@string/title_activity_calculator" />

        <activity
            android:name="altcoin.br.decred.WalletsActivity"
            android:label="@string/title_activity_wallets" />

        <service
            android:name="altcoin.br.decred.services.BalanceChangesService"
            android:enabled="true" />

        <service
            android:name="altcoin.br.decred.services.PriceAlertService"
            android:enabled="true" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="1b9e889468bf967dddcafc0104451052e83223bd" />

        <receiver android:name="altcoin.br.decred.widget.CoinWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="android.appwidget.action.UPDATE_BUTTON" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/appwidget_provider_info" />
        </receiver>

        <activity
            android:name="altcoin.br.decred.AboutActivity"
            android:label="@string/title_activity_about" />

        <activity
            android:name="altcoin.br.decred.AlertActivity"
            android:label="@string/title_activity_alerts" />

        <receiver android:name="altcoin.br.decred.ReceiverOnBootComplete"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <receiver android:name="altcoin.br.decred.RestartPriceAlertService" >
            <intent-filter>
                <action android:name="KillPriceAlertService" >
                </action>
            </intent-filter>
        </receiver>

    </application>

</manifest>